<div class="container">
    <div class="left-side"></div>
    <div class="right-side">
        <form action="/post-login" method="post" class="form-container">
            <h2 align="center">Sign In</h2>
            <% if(locals.message.success){%>
                <div class="alert-success">
                    <%=message.success %>
                </div>
                <% } if(errors){ %>
                    <div class="errors">
                        <ul>
                            <% errors.forEach(e=>{%>
                                <li>
                                    <%= e.msg %>
                                </li>
                                <%}) %>
                        </ul>
                    </div>
                    <% } %>
                        <div class="group">
                            <label for="">Email</label>
                            <input type="text" name="email" class="control" value="<% if(data) {%><%=data.email %><% } %>">
                        </div>
                        <div class="group">
                            <label for="">Password</label>
                            <input type="password" name="password" class="control" value="<% if(data) {%><%=data.password %><% } %>">
                        </div>
                        <div class="group">
                            <input type="submit" value="Sign In" class="btn btn-success">
                        </div>
        </form>
    </div>
</div>