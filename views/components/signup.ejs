<div class="container">
    <div class="left-side"></div>
    <div class="right-side">
        <form action="/signup" method="POST" class="form-container">
            <h2 align="center">Sign Up</h2>
            <% if(errors){ %>
                <div class="errors">
                    <ul>
                        <% errors.forEach(e=>{%>
                            <li>
                                <%= e.msg %>
                            </li>
                            <%}) %>
                    </ul>
                </div>
                <% } %>
                    <div class="group">
                        <label for="">Full Name</label>
                        <input type="text" name="full_name" class="control"
                            value="<% if(data) {%><%=data.full_name %><% } %>">
                    </div>
                    <div class="group">
                        <label for="">Email</label>
                        <input type="email" name="email" class="control" value="<% if(data) {%><%=data.email %><% } %>">
                    </div>
                    <div class="group">
                        <label for="">Password</label>
                        <input type="password" name="password" class="control"
                            value="<% if(data) {%><%=data.password %><% } %>">
                    </div>
                    <div class="group">
                        <label for="">Confirm Password</label>
                        <input type="password" name="confirm_password" class="control"
                            value="<% if(data) {%><%=data.confirm_password %><% } %>">
                    </div>
                    <div class="group">
                        <input type="submit" value="Sign In" class="btn btn-success">
                    </div>
        </form>
    </div>
</div>